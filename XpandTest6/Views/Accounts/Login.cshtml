@model XpandTest6.ViewModels.LoginViewModel

<h2>Sign In</h2>
<form method="post" asp-controller="Accounts" asp-action="Login"
      asp-route-returnUrl="@Model.ReturnUrl">
    <div asp-validation-summary="ModelOnly"></div>
    <div>
        <label asp-for="Email"></label><br />
        <input asp-for="Email" class="form-control" />
        <span asp-validation-for="Email"></span>
    </div>
    <div>
        <label asp-for="Password"></label><br />
        <input asp-for="Password" class="form-control" />
        <span asp-validation-for="Password"></span>
    </div>
    <div>
        <input type="submit" class="btn continue btn-block" value="Continue" />
    </div>
</form>

<br />
<a href="#" class="btn facebook btn-block" role="button">Sign In With Facebook</a>
<br />
<a href="#" class="btn twitter btn-block" role="button">Sign In With Twitter</a>

<br />
<a asp-controller="Accounts" asp-action="Register">Sign Up</a>
<br />
<a asp-controller="Accounts" asp-action="ForgotPassword">Reset the password</a>