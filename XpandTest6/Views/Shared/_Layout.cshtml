<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - XpandTest6</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/form.css" />
</head>
<body>
    <header>
    </header>

    <div class="container">
        <div class="row h-100">
            <div class="col-xs-12 col-sm-12 col-lg-12 my-auto">
                <div class="card card-block mx-auto bg-image mainBackground">
                    
                    <div class="container-fluid bg-image formBackground">
                        <div class="col-xs-12 col-sm-12 col-lg-12">
                            <div class="row">
                                <div class="col-xs-6 col-sm-6 col-md-6">

                                </div>
                                <div class="col-xs-6 col-sm-6 col-md-6">
                                    <div class="righthBlockForm">
                                        @RenderBody()
                                    
                                    </div>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

        <footer class="border-top footer text-muted">
            <div class="container">
                &copy; 2021 - XpandTest6 - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
            </div>
        </footer>
        <script src="~/lib/jquery/dist/jquery.min.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
        <script src="~/js/site.js" asp-append-version="true"></script>
        @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
